<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lhpc.dao.VerificationCodeMapper">
	<resultMap id="BaseResultMap" type="com.lhpc.model.VerificationCode">
		<id column="code_id" property="codeId" jdbcType="INTEGER" />
		<result column="code" property="code" jdbcType="INTEGER" />
		<result column="mobile" property="mobile" jdbcType="VARCHAR" />
		<result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
	</resultMap>
	<sql id="Base_Column_List">
		code_id, code, mobile, create_time
	</sql>
	<select id="selectByMobile" resultMap="BaseResultMap"
		parameterType="com.lhpc.model.VerificationCode">
		select
		<include refid="Base_Column_List" />
		from wx_code
		where mobile = #{mobile,jdbcType=VARCHAR}
		order by create_time desc limit 1
	</select>
	<delete id="deleteByMobile" parameterType="com.lhpc.model.VerificationCode">
		delete from wx_code
		where mobile = #{mobile,jdbcType=VARCHAR}
	</delete>
	<insert id="insert" parameterType="com.lhpc.model.VerificationCode">
		insert into wx_code (code, mobile,create_time)
		values ( #{code,jdbcType=INTEGER},
		#{mobile,jdbcType=VARCHAR},#{createTime,jdbcType=TIMESTAMP})
	</insert>
</mapper>